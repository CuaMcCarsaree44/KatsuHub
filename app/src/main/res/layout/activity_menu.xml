<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MenuActivity"
        android:background="@color/backgroundColors"
>
    <TextView
            android:text="KATSU HUB"
            android:textSize="52sp"
            android:fontFamily="@font/neophobia"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:textAlignment="center"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent"
          android:layout_height="4dp"
          android:background="#FFFFFF"
          android:layout_alignParentTop="true"
          android:layout_marginTop="90dp"
    />

    <Button
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"

            android:background="@drawable/tiles_design"
            android:text="Main Menu"
            android:textSize="18sp"
            android:fontFamily="@font/februari_normal"
            android:textColor="#FFFFFF"
    />

    <Button
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="150.5dp"

            android:background="@drawable/tiles_design"
            android:text="Search Character"
            android:textSize="18sp"
            android:fontFamily="@font/februari_normal"
            android:textColor="#FFFFFF"
    />

    <Button
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"

            android:background="@drawable/tiles_design"
            android:text="Search Anime"
            android:textSize="18sp"
            android:fontFamily="@font/februari_normal"
            android:textColor="#FFFFFF"
    />

    <Button
            android:layout_width="185dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="20dp"

            android:background="@drawable/tiles_design"
            android:text="Recent Watched"
            android:textSize="18sp"
            android:fontFamily="@font/februari_normal"
            android:textColor="#FFFFFF"
    />

    <Button
            android:layout_width="185dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="205dp"

            android:background="@drawable/tiles_design"
            android:text="My Favorite Anime"
            android:textSize="18sp"
            android:fontFamily="@font/februari_normal"
            android:textColor="#FFFFFF"
    />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

    />

</RelativeLayout>
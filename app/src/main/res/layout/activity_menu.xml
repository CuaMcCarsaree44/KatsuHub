<?xml version="1.0" encoding="utf-8"?>
<!--Metro Main Menu Mode-->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MenuActivity"
        android:background="@color/backgroundColors"
>

    <TextView
            android:text="KATSU HUB"
            android:textSize="52sp"
            android:fontFamily="@font/neophobia"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent"
          android:layout_height="4dp"
          android:background="#FFFFFF"
          android:layout_alignParentTop="true"
          android:layout_marginTop="75dp"
    />

    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/menuViewPager"
    >
        <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tabLayoutMenu"
            android:background="@color/navBar"

            android:layout_alignParentTop="true"
            android:layout_marginTop="680dp"
    >

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>
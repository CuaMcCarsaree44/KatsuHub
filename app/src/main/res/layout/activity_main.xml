<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:background="@color/backgroundColors"
        android:focusableInTouchMode="true"
>
    <EditText
            android:id="@+id/searchAnime"
            android:layout_width="376dp"
            android:layout_height="30dp"
            android:hint="Search Anime"
            android:background="#FFFFFF"
            android:saveEnabled="true"

            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/neofobia_bold"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Featured Anime"
            android:fontFamily="@font/neofobia_bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/featuredAnime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="148dp"
    >

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recently Searched Anime"
            android:fontFamily="@font/neofobia_bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="359dp"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="379dp"
    >

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>
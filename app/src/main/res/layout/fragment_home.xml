<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
        <data>
                <variable name="viewmodel" type="com.cua.katsuhub.viewmodel.MetroMenuViewModel" />
        </data>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".view.fragments.menuactivity_frag.Home"
        >

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                >

                        <Button
                                android:id="@+id/mainMenuTile"
                                android:layout_width="130dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="100dp"
                                android:layout_marginLeft="0dp"

                                android:background="@drawable/tiles_design"
                                android:text="Main Menu"
                                android:textSize="18sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />

                        <Button
                                android:id="@+id/searchCharacterTile"
                                android:layout_width="240dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="100dp"
                                android:layout_marginLeft="130.5dp"

                                android:background="@drawable/tiles_design"
                                android:text="Search Character"
                                android:textSize="18sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />

                        <Button
                                android:id="@+id/searchAnimeTile"
                                android:layout_width="370dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="200dp"
                                android:layout_marginLeft="0dp"

                                android:background="@drawable/tiles_design"
                                android:text="Search Anime"
                                android:textSize="18sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />

                        <Button
                                android:id="@+id/historyTile"
                                android:layout_width="185dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="300dp"
                                android:layout_marginLeft="0dp"

                                android:background="@drawable/tiles_design"
                                android:text="Recent Watched"
                                android:textSize="19sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />

                        <Button
                                android:id="@+id/favoriteTile"
                                android:layout_width="185dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="300dp"
                                android:layout_marginLeft="185dp"

                                android:background="@drawable/tiles_design"
                                android:text="My Favorite Anime"
                                android:textSize="18sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />

                        <Button
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="400dp"
                                android:layout_marginLeft="0dp"

                                android:background="@drawable/tiles_design"
                                android:text="Feature 1"
                                android:textSize="18sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />

                        <ImageButton
                                android:id="@+id/settingTile"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="400dp"
                                android:layout_marginLeft="120dp"

                                android:background="@drawable/tiles_design"
                                android:src="@drawable/ic_settings_black_24dp"
                        />

                        <ImageButton
                                android:id="@+id/shareTile"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="400dp"
                                android:layout_marginLeft="170dp"

                                android:background="@drawable/tiles_design"
                                android:src="@drawable/ic_share_black_24dp"
                        />

                        <ImageButton
                                android:id="@+id/incognitoTile"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="450dp"
                                android:layout_marginLeft="120dp"

                                android:background="@drawable/tiles_design"
                                android:src="@drawable/ic_mood_black_24dp"
                        />

                        <ImageButton
                                android:id="@+id/ratingTile"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="450dp"
                                android:layout_marginLeft="170dp"

                                android:background="@drawable/tiles_design"
                                android:src="@drawable/ic_grade_black_24dp"
                        />

                        <Button
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="400dp"
                                android:layout_marginLeft="220dp"

                                android:background="@drawable/tiles_design"
                                android:text="Feature 2"
                                android:textSize="18sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />

                        <Button
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="500dp"
                                android:layout_marginLeft="220dp"

                                android:background="@drawable/tiles_design"
                                android:text="Feature 3"
                                android:textSize="18sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />

                        <Button
                                android:layout_width="220dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="500dp"
                                android:layout_marginLeft="0dp"

                                android:background="@drawable/tiles_design"
                                android:text="Feature 4"
                                android:textSize="18sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />

                        <Button
                                android:layout_width="220dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="600dp"
                                android:layout_marginLeft="0dp"

                                android:background="@drawable/tiles_design"
                                android:text="Feature 5"
                                android:textSize="18sp"
                                android:fontFamily="@font/februari_normal"
                                android:textColor="#FFFFFF"
                        />
                </RelativeLayout>
        </LinearLayout>
</layout>